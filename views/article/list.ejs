
            <!--우측 상단 헤더 영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>게시판 정보 관리</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/">Home > </a>
                        </li>
                        <li>
                            <a>게시판 정보 관리 > </a>
                        </li>
                        <li class="active">
                            <strong>조회</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">


                <!-- 조회 옵션 -->
                <div class="ibox-content m-b-sm border-bottom">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="OrderNo">게시판 유형</label>
                                <select class="form-control">
                                    <!-- board_type_code -->
                                    <option value="0">선택</option>
                                    <option value="1">공지 게시판</option>
                                    <option value="2">일반 게시판</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="OrderName">제목</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label" for="OrderName">게시글 유형</label>
                                <select class="form-control">
                                <!-- article_type_code -->
                                    <option value="0">선택</option>
                                    <option value="1">상단 고정 게시글</option>
                                    <option value="2">일반 게시글</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary">조회</button>
                        <a href="/article/create" class="btn btn-info">신규</a>
                    </div>
                </div>

                <!-- 리스트 -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div class="table-responsive">

                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th width="10%">제목</th>
                                                <th width="10%">작성자</th>
                                                <th width="40%">내용</th>
                                                <th width="10%">ip주소</th>
                                                <th width="5%">게시판 유형</th>
                                                <th width="5%">게시글 유형</th>
                                                <th width="10%">조회수</th>
                                                <th width="10%">등록일</th>
                                            </tr>
                                        </thead>

                                    
                                        <tbody class="hoverTblBody">
                                            <% for(let i=0; i<article.length; i++) { %>
                                            <tr>
                                                <td><a href="/artic/modify/<%=article[i].article_id%>"><%=article[i].title%></a></td>
                                                <td><%=article[i].reg_member_id%></td>
                                                <td><%=article[i].contents%></td>
                                                <td>
                                                    <% if (article[i].board_type_code === 1) {%>
                                                    공지 게시판
                                                    <%}%>
                                                    <% if (article[i].board_type_code === 2) {%>
                                                    일반 게시판
                                                    <%}%>
                                                </td>
                                                <td>
                                                <% if (article[i].article_type_code === 1) {%>
                                                    상단 고정 게시글
                                                    <%}%>
                                                    <% if (article[i].article_type_code === 2) {%>
                                                    일반 게시글
                                                    <%}%>
                                                </td>
                                                <td><%=article[i].ip_adress%></td>
                                                <td><%=article[i].reg_date%></td>
                                                <td><%=article[i].view_count%></td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>

